<%- include('../../fragments/header.ejs'); %>
<div class="line _bordered">
        <a href="/films/add">Добавить</a>
        <a href="/films/upload">Изменить</a>
</div>

<form class="form" method="PATCH">
    <div class="form__row">
        <label class="form__cell _label" for="numForUpload">Номер изменяемого элемента</label>
        <input class="form__cell" type="text" name="numForUpload" id="numForUpload">
    </div>
    <div class="form__row">
        <label class="form__cell _label" for="name">Название</label>
        <input class="form__cell" type="text" name="title" id="title">
    </div>
    <div class="form__row">
        <label class="form__cell _label" for="login">Дата выхода</label>
        <input class="form__cell" type="text" name="dateRelise" id="dateRelise">
    </div>
    <div class="form__row">
        <label class="form__cell _label" for="email">Автор</label>
        <input class="form__cell" type="text" name="author" id="author">
    </div>
    <div class="form__row">
        <button class="form__button" type="submit">Submit</button>
    </div>
</form>

<div class="line _table">
        <table>
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Дата выхода</th>
                    <th>Автор </th>
                </tr>
            </thead>
            <tbody>
                <% films.forEach(film => { %>
                    <tr>
                        <td><%= film.title %></td>
                        <td><%= film.dateRelise %></td>
                        <td><%= film.author %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
</div>

<%- include('../../fragments/footer.ejs'); %>
